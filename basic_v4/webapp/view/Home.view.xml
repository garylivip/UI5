<mvc:View
    controllerName="ns.basicv4.controller.Home"
    displayBlock="true"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.ui.layout.form"
    xmlns:core="sap.ui.core"
    xmlns:l="sap.ui.layout"
    xmlns:semantic="sap.f.semantic"
>
    <Shell id="_IDGenShell1">
        <App
            id="_IDGenApp"
            busy="{homeView>/busy}"
            class="sapUiSizeCompact"
        >
            <pages>
                <Page
                    id="_IDGenPage"
                    title="{i18n>peoplePageTitle}"
                >
                    <headerContent>
                        <Button
                            id="resetChangesButton"
                            text="{i18n>resetChangesButtonText}"
                            enabled="{= !${homeView>/hasUIChanges} }"
                            press=".onResetDataSource"
                            type="Emphasized"
                        />
                    </headerContent>
                    <content>
                        <l:ResponsiveSplitter
                            id="_IDGenResponsiveSplitter"
                            defaultPane="defaultPane"
                        >
                            <l:PaneContainer
                                id="_IDGenPaneContainer"
                                orientation="Horizontal"
                            >
                                <l:SplitPane id="defaultPane">
                                    <l:layoutData>
                                        <l:SplitterLayoutData
                                            id="defaultLayout"
                                            size="100%"
                                            resizable="false"
                                        />
                                    </l:layoutData>
                                    <Table
                                        id="peopleList"
                                        growing="true"
                                        growingThreshold="10"
                                        items="{
											path: '/People',
											parameters: {
												$count: true,
												$$updateGroupId: 'peopleGroup'
											}								
										}"
                                        mode="SingleSelectLeft"
                                        selectionChange=".onSelectionChange"
                                    >
                                        <headerToolbar>
                                            <OverflowToolbar
                                                id="_IDGenOverflowToolbar"
                                            >
                                                <content>
                                                    <ToolbarSpacer
                                                        id="_IDGenToolbarSpacer"
                                                    />
                                                    <SearchField
                                                        id="searchField"
                                                        width="20rem"
                                                        search=".onSearch"
                                                        placeholder="{i18n>searchFieldPlaceholder}"
                                                        enabled="{= !${homeView>/hasUIChanges}}"
                                                    />
                                                    <Button
                                                        id="addUserButton"
                                                        icon="sap-icon://add"
                                                        text="{i18n>createButtonText}"
                                                        press=".onCreate"
                                                    >
                                                        <layoutData>
                                                            <OverflowToolbarLayoutData
                                                                id="_IDGenOverflowToolbarLayoutData"
                                                                priority="NeverOverflow"
                                                            />
                                                        </layoutData>
                                                    </Button>
                                                    <Button
                                                        id="deleteUsersButton"
                                                        icon="sap-icon://delete"
                                                        text="{i18n>deleteButtonText}"
                                                        press=".onDelete"
                                                    >
                                                        <layoutData>
                                                            <OverflowToolbarLayoutData
                                                                id="_IDGenOverflowToolbarLayoutData1"
                                                                parseError="NeverOverflow"
                                                            />
                                                        </layoutData>
                                                    </Button>
                                                    <Button
                                                        id="refreshUsersButton"
                                                        icon="sap-icon://refresh"
                                                        text="{i18n>refreshButtonText}"
                                                        press=".onRefresh"
                                                    />

                                                    <Button
                                                        id="sortUsersButton"
                                                        icon="sap-icon://sort"
                                                        text="{i18n>sortButtonText}"
                                                        enabled="{=!${homeView>/hasUIChanges} }"
                                                        press=".onSort"
                                                    />
                                                </content>
                                            </OverflowToolbar>
                                        </headerToolbar>
                                        <columns>
                                            <Column id="userNameColumn">
                                                <Text
                                                    id="_IDGenText"
                                                    text="{i18n>userNameLabelText}"
                                                />
                                            </Column>
                                            <Column id="firstNameColumn">
                                                <Text
                                                    id="_IDGenText1"
                                                    text="{i18n>firstNameLabelText}"
                                                />
                                            </Column>
                                            <Column id="lastNameColumn">
                                                <Text
                                                    id="_IDGenText2"
                                                    text="{i18n>lastNameLabelText}"
                                                />
                                            </Column>
                                            <Column id="ageColumn">
                                                <Text
                                                    id="_IDGenText3"
                                                    text="{i18n>ageLabelText}"
                                                />
                                            </Column>
                                        </columns>
                                        <items>
                                            <ColumnListItem
                                                id="_IDGenColumnListItem"
                                            >
                                                <cells>
                                                    <Input
                                                        id="_IDGenInput"
                                                        value="{UserName}"
                                                        valueLiveUpdate="true"
                                                        liveChange=".onInputChange"
                                                    />
                                                </cells>
                                                <cells>
                                                    <Input
                                                        id="_IDGenInput1"
                                                        value="{FirstName}"
                                                        liveChange=".onInputChange"
                                                    />
                                                </cells>
                                                <cells>
                                                    <Input
                                                        id="_IDGenInput2"
                                                        value="{LastName}"
                                                        liveChange=".onInputChange"
                                                    />
                                                </cells>
                                                <cells>
                                                    <Input
                                                        id="_IDGenInput3"
                                                        value="{Age}"
                                                        valueLiveUpdate="true"
                                                        liveChange=".onInputChange"
                                                    />
                                                </cells>
                                            </ColumnListItem>
                                        </items>
                                    </Table>
                                </l:SplitPane>
                                <l:SplitPane id="_IDGenSplitPane">
                                    <semantic:SemanticPage
                                        id="detailArea"
                                        visible="false"
                                    >
                                        <semantic:titleHeading>
                                            <Title
                                                id="_IDGenTitle"
                                                text="{FirstName} {LastName}"
                                            />
                                        </semantic:titleHeading>
                                        <semantic:headerContent>
                                            <FlexBox id="_IDGenFlexBox1">
                                                <VBox id="_IDGenVBox">
                                                    <ObjectAttribute
                                                        id="_IDGenObjectAttribute"
                                                        text="{ i18n>userNameLabelText }"
                                                    />
                                                    <ObjectAttribute
                                                        id="_IDGenObjectAttribute1"
                                                        text="{UserName}"
                                                    />
                                                </VBox>
                                                <VBox id="_IDGenVBox1">
                                                    <ObjectAttribute
                                                        id="_IDGenObjectAttribute2"
                                                        text="{ i18n>ageLabelText }"
                                                    />
                                                    <ObjectNumber
                                                        id="_IDGenObjectNumber"
                                                        number="{Age}"
                                                        unit="Years"
                                                    />
                                                </VBox>
                                            </FlexBox>
                                        </semantic:headerContent>
                                        <semantic:content>
                                            <VBox id="_IDGenVBox2">
                                                <FlexBox
                                                    id="_IDGenFlexBox2"
                                                    wrap="Wrap"
                                                >
                                                    
                                                    <f:Form
                                                        id="_IDGenForm2"
                                                        editable="false"
                                                    >
                                                        <f:title>
                                                            <core:Title
                                                                id="_IDGenTitle2"
                                                                text="{i18n>bestFriendTitleText}"
                                                            />
                                                        </f:title>
                                                        <f:layout>
                                                            <f:ResponsiveGridLayout
                                                                id="_IDGenResponsiveGridLayout1"
                                                                labelSpanXL="3"
                                                                labelSpanL="3"
                                                                labelSpanM="3"
                                                                labelSpanS="12"
                                                                adjustLabelSpan="false"
                                                                emptySpanXL="4"
                                                                emptySpanL="4"
                                                                emptySpanM="4"
                                                                emptySpanS="0"
                                                                columnsXL="1"
                                                                columnsL="1"
                                                                columnsM="1"
                                                                singleContainerFullSize="false"
                                                            />
                                                        </f:layout>
                                                        <f:formContainers>
                                                            <f:FormContainer
                                                                id="_IDGenFormContainer1"
                                                            >
                                                                <f:formElements>
                                                                    <f:FormElement
                                                                        id="_IDGenFormElement4"
                                                                        label="{i18n>nameLabelText}"
                                                                    >
                                                                        <f:fields
                                                                        >
                                                                            <Text
                                                                                id="_IDGenText8"
                                                                                text="{BestFriend/FirstName} {BestFriend/LastName}"
                                                                            />
                                                                        </f:fields>
                                                                    </f:FormElement>
                                                                    <f:FormElement
                                                                        id="_IDGenFormElement5"
                                                                        label="{i18n>ageLabelText}"
                                                                    >
                                                                        <f:fields>
                                                                            <Text
                                                                                id="_IDGenText9"
                                                                                text="{BestFriend/Age}"
                                                                            />
                                                                        </f:fields>
                                                                    </f:FormElement>
                                                                    <f:FormElement
                                                                        id="_IDGenFormElement6"
                                                                        label="{i18n>userNameLabelText}"
                                                                    >
                                                                        <f:fields
                                                                        >
                                                                            <Text
                                                                                id="_IDGenText10"
                                                                                text="{BestFriend/UserName}"
                                                                            />
                                                                        </f:fields>
                                                                    </f:FormElement>
                                                                </f:formElements>
                                                            </f:FormContainer>
                                                        </f:formContainers>
                                                    </f:Form>
                                                </FlexBox>
                                            </VBox>
                                        </semantic:content>
                                    </semantic:SemanticPage>
                                </l:SplitPane>
                            </l:PaneContainer>
                        </l:ResponsiveSplitter>
                    </content>
                    <footer>
                        <Toolbar id="footerToolbar">
                            <ToolbarSpacer id="_IDGenToolbarSpacer1" />
                            <Button
                                id="saveButton"
                                text="{i18n>saveButtonText}"
                                type="Emphasized"
                                press=".onSave"
                                enabled="{=${message>/}.length === 0 &amp;&amp; ${homeView>/usernameEmpty} === false }"
                            />
                            <Button
                                id="doneButton"
                                text="{i18n>cancelButtonText}"
                                press=".onResetChanges"
                            />
                        </Toolbar>
                    </footer>
                </Page>
            </pages>
        </App>
    </Shell>
</mvc:View>
